  <div class="content-section-a">

      <div class="container">

          <div class="row">
              <div class="col-lg-5 col-sm-6">
                  <hr class="section-heading-spacer">
                  <div class="clearfix"></div>
                  <h2 class="section-heading">Make a Reservation</h2>
                  <p class="lead">Join Chef Peden for an excellent dining experience.</p>
              </div>
              <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <% if flash[:alert] %>
                <div class="alert alert-danger" role="alert"><%= flash[:alert] if flash[:alert] %></div>
                <% end %>
                <%= form_for @booking, url: {controller: "bookings", action: "create"} do |f| %>
                  <div class="form-group">
                    <label>Start reservation</label>
                    <%= f.text_field :start, class: "form-control bdatepicker" %>
                  </div>
                  <div class="form-group">
                    <label>End reservation</label>
                    <%= f.text_field :end, class: "form-control bdatepicker" %>
                  </div>
                  <div class="form-group">
                    <label>How many people?</label>
                    <%= f.text_field :covers, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <%= f.text_field :customer, class: "form-control" %>
                  </div>
                  <%= f.submit "Place Booking", class: "btn btn-default" %>
                <% end %>
              </div>
              <script type="text/javascript">
            $(function () {
                $('.bdatepicker').datetimepicker(
                  {
                    format: "YYYY-MM-DD HH:mm",
                  }
                );
            });
        </script>
          </div>

      </div>
      <!-- /.container -->

  </div>
